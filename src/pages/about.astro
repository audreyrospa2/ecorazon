<style>
  /* Hero animations - load immediately */
  @keyframes fadeInDown {
    from {
      opacity: 0;
      transform: translateY(-20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fadeInDown 0.8s ease-out 0.2s both;
  }

  .animate-fade-in-delay {
    animation: fadeInDown 0.8s ease-out 0.4s both;
  }

  /* Scroll-triggered animations */
  .who-we-are-text,
  .who-we-are-image,
  .feature-item,
  .story-title,
  .story-content,
  .mission-card,
  .vision-card {
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.8s ease-out, transform 0.8s ease-out;
  }

  .who-we-are-text.visible {
    opacity: 1;
    transform: translateY(0);
    transition-delay: 0.1s;
  }

  .who-we-are-image.visible {
    opacity: 1;
    transform: translateY(0);
    transition-delay: 0.3s;
  }

  .feature-item.visible {
    opacity: 1;
    transform: translateY(0);
  }

  .feature-item:nth-child(1).visible {
    transition-delay: 0.2s;
  }

  .feature-item:nth-child(2).visible {
    transition-delay: 0.4s;
  }

  .feature-item:nth-child(3).visible {
    transition-delay: 0.6s;
  }

  .story-title.visible {
    opacity: 1;
    transform: translateY(0);
    transition-delay: 0.1s;
  }

  .story-content.visible {
    opacity: 1;
    transform: translateY(0);
    transition-delay: 0.3s;
  }

  .mission-card.visible {
    opacity: 1;
    transform: translateY(0);
    transition-delay: 0.1s;
  }

  .vision-card.visible {
    opacity: 1;
    transform: translateY(0);
    transition-delay: 0.3s;
  }

  /* Hover effects */
  .feature-item {
    transition: opacity 0.8s ease-out, transform 0.8s ease-out, background-color 0.3s ease;
    padding: 1rem;
    border-radius: 0.5rem;
    cursor: pointer;
  }

  .feature-item:hover {
    background-color: rgba(139, 186, 139, 0.1);
    transform: translateX(10px) translateY(0);
  }

  .who-we-are-image {
    transition: opacity 0.8s ease-out, transform 0.8s ease-out, box-shadow 0.3s ease;
  }

  .who-we-are-image:hover {
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
  }

  .story-content {
    transition: opacity 0.8s ease-out, transform 0.8s ease-out, box-shadow 0.3s ease;
  }

  .story-content:hover {
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
  }

  .mission-card,
  .vision-card {
    transition: opacity 0.8s ease-out, transform 0.8s ease-out, box-shadow 0.3s ease;
    cursor: pointer;
  }

  .mission-card:hover,
  .vision-card:hover {
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
    transform: translateY(-5px);
  }

  /* Smooth scrolling */
  html {
    scroll-behavior: smooth;
  }
</style>

<script>
  // Intersection Observer for scroll animations
  const observerOptions = {
    threshold: 0.2,
    rootMargin: '0px 0px -50px 0px'
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('visible');
      }
    });
  }, observerOptions);

  // Observe all animated elements
  document.addEventListener('DOMContentLoaded', () => {
    const elementsToAnimate = document.querySelectorAll(
      '.who-we-are-text, .who-we-are-image, .feature-item, .story-title, .story-content, .mission-card, .vision-card'
    );
    
    elementsToAnimate.forEach(el => observer.observe(el));
  });
</script>