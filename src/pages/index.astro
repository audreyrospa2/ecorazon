<style>
  /* Hero text animations - only on load */
  @keyframes fadeInDown {
    from {
      opacity: 0;
      transform: translateY(-30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Hero animations - play immediately on load */
  .hero-title {
    animation: fadeInDown 1.2s ease-out 0.3s both;
  }

  .hero-subtitle {
    animation: fadeInUp 1.2s ease-out 0.6s both;
  }

  .hero-section .hero-cta {
    animation: fadeInUp 1.2s ease-out 0.9s both;
  }

  /* Scroll-triggered animations */
  .about-title,
  .about-text,
  .materials-title,
  .material-card,
  .hero-cta {
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.8s ease-out, transform 0.8s ease-out;
  }

  .about-title.visible {
    opacity: 1;
    transform: translateY(0);
    transition-delay: 0.1s;
  }

  .about-text.visible {
    opacity: 1;
    transform: translateY(0);
    transition-delay: 0.3s;
  }

  .materials-title.visible {
    opacity: 1;
    transform: translateY(0);
    transition-delay: 0.1s;
  }

  .material-card.visible {
    opacity: 1;
    transform: translateY(0);
  }

  .material-card:nth-child(1).visible { transition-delay: 0.1s; }
  .material-card:nth-child(2).visible { transition-delay: 0.2s; }
  .material-card:nth-child(3).visible { transition-delay: 0.3s; }
  .material-card:nth-child(4).visible { transition-delay: 0.4s; }
  .material-card:nth-child(5).visible { transition-delay: 0.5s; }

  /* Smooth scrolling */
  html {
    scroll-behavior: smooth;
  }

  /* Button float effect */
  .btn-float {
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .btn-float:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
  }

  /* Hero button hover - green to olive */
  .hero-section .btn-float:hover {
    background-color: #556B2F; /* deep-olive color */
  }

  /* CTA section button hover - white to light gray */
  .bg-deep-olive .btn-float:hover {
    background-color: #f3f4f6; /* gray-100 color */
  }
</style>

<script>
  // Intersection Observer for scroll animations
  const observerOptions = {
    threshold: 0.2,
    rootMargin: '0px 0px -50px 0px'
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('visible');
      }
    });
  }, observerOptions);

  // Observe all animated elements
  document.addEventListener('DOMContentLoaded', () => {
    const elementsToAnimate = document.querySelectorAll(
      '.about-title, .about-text, .materials-title, .material-card'
    );
    
    elementsToAnimate.forEach(el => observer.observe(el));
  });
</script>
